<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/error_image_view"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:src="@drawable/img_error_sign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/went_wrong_text_view"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/something_went_wrong_error_message"
        app:layout_constraintEnd_toEndOf="@+id/error_image_view"
        app:layout_constraintStart_toStartOf="@+id/error_image_view"
        app:layout_constraintTop_toBottomOf="@+id/error_image_view" />

    <TextView
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again_error_message"
        app:layout_constraintEnd_toEndOf="@+id/went_wrong_text_view"
        app:layout_constraintStart_toStartOf="@+id/went_wrong_text_view"
        app:layout_constraintTop_toBottomOf="@+id/went_wrong_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>